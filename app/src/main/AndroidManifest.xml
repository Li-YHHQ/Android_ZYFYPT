<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- 网络权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 修改系统亮度权限 -->
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <!-- 访问网络状态 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ZYFYPT617wagntao"
        tools:targetApi="31">
        <!-- 文章详情页 -->
        <activity
            android:name=".activities.ViewArticleActivity"
            android:exported="false" />
        <!-- 课件详情页 -->
        <activity
            android:name=".activities.DetailActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:exported="false" />
        <activity
            android:name=".activities.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MainActivity"
            android:exported="false" />
        <!-- 注册页面 -->
        <activity
            android:name=".activities.RegisterActivity"
            android:exported="false" />
        <!-- 我的收藏 -->
        <activity
            android:name=".activities.MyCollectMainActivity"
            android:exported="false" />
        <!-- 我的关注 -->
        <activity
            android:name=".activities.MyFocusMainActivity"
            android:exported="false" />
        <!-- 用户详情页 -->
        <activity
            android:name=".activities.UserDetailActivity"
            android:exported="false" />
        <!-- 设置页面 -->
        <activity
            android:name=".activities.SettingsActivity"
            android:exported="false"
            android:theme="@style/Theme.Settings" />
    </application>

</manifest>